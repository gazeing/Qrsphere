<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45sp"
    android:background="@drawable/background_orange"
    android:orientation="horizontal"  >

        <TextView
            android:id="@+id/tvmaintitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btn_main_title_left"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/btn_main_title_right"
            android:gravity="right"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_main_title_left"
            android:layout_width="32dip"
            android:layout_height="32dip"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:background="@drawable/id_logo_title" />

        <Button
            android:id="@+id/btn_main_title_right"
            android:layout_width="32dip"
            android:layout_height="32dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2dp"
            android:layout_centerVertical="true"
            android:background="@drawable/generic_profile_image" />

</RelativeLayout>