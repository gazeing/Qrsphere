<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

    <TextView
        android:id="@+id/DetailTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scan Details"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginBottom="15sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/DetailContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Content:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/DetailContentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="http://www.nba.com"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:layout_marginBottom="5sp"/>
     
     
     <TextView
        android:id="@+id/DetailWhen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="When:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/DetailWhenText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01/01/2013 00:00 am"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:layout_marginBottom="5sp"/>
    
    <TextView
        android:id="@+id/DetailWhere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Where:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/DetailWhereText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="North Ryde 2113"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:layout_marginBottom="5sp"/>
 
  <fragment
    android:id="@+id/map"
    android:layout_width="match_parent"
    android:layout_height="0dip"
    android:layout_weight="20"
    class="com.google.android.gms.maps.SupportMapFragment"/>
  
   <include
        android:id="@+id/ad_bar"
        layout="@layout/ad_bar" />
</LinearLayout>
